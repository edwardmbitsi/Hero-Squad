{{#partial "content"}}
    <link rel='stylesheet' href='/css/style.css'>

        <div class="detail" >
        {{#each hero}}
            <p>Name:{{ name }}</p>
            <p>Age:{{ age }}</p>
            <p>Powers:{{ powers }}</p>
            <p>Weakness:{{ weakness }}</p>
            <p>Id:{{id}}</p>
        <hr>
            <p>
                {{#if post.published }}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
                {{/if}}

            </p>
        {{/each}}
        </div>
    <div class="buttons">
        <a href="/hero-form"><button type="submit" class="btn btn-info" style="text-align: center;">Add New Hero</button> </a>
    </div>

{{/partial}}

{{> layout.hbs}}
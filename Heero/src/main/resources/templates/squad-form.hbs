

{{#partial "content"}}
    <link rel='stylesheet' href='/css/style.css'>

    <h1>Add a new Squad!</h1>

    <form action="/squad/new" method="post" class="app">
        <div class=form-group">
            <label for ="name"> Squad Name</label>
            <input type="text" style="margin-bottom: 30px;" name="name" required>
        </div>
        <div class=form-group">
            <label for ="Size"> Squad Size</label>
            <input type="number" style="margin-bottom: 30px;" name="size" required>
        </div>
        <div class=form-group">
            <label for ="cause"> Squad Cause</label>
            <input type="text" style="margin-bottom: 30px;" name="cause" required>
        </div>
        <button type="submit" class="btn btn-info">Add new Squad </button>
    </form>
{{/partial}}


<div class="center">
    <div class="card-header">
        <h3>Squad</h3>
    </div>
    <div class="card-body">
        <p class="card-text">Add a new sqaud</p>
        <form action="/squads" method="post">
            <div class="form-group form-inline>
                <label for="squadName">Name: </label>
                <input type="text" name="squadName" id="squadName" required>
            </div>
            <div class="form-group form-inline>
                <label for="size">Size: </label>
                <input type="number" min="1" id="size" name="size" required>
            </div>
            <div class=form-group form-inline>
                <label for="cause">Cause: </label>
                <input type="text" name="cause" id="cause" required>
            </div>

            <button type="submit" class="btn btn-dark">Add your Squad</button>
        </form>
    </div>
</div>